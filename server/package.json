{
  "name": "@tanuki/server",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "engines": {
    "node": "~12.15.0"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "echo \"===Running Migrations===\" && yarn migrate:latest && echo \"===Compiling Code===\" && tsc --extendedDiagnostics",
    "cli": "ts-node",
    "generate:types": "graphql-codegen --config codegen.yml",
    "migrate:make": "ts-node ./src/scripts/migrate:make.ts",
    "migrate:latest": "knex migrate:latest --knexfile ./src/knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile ./src/knexfile.ts",
    "start": "node ./build/main.js",
    "start:dev": "ts-node ./src/main.ts",
    "start:dev:watch": "ts-node-dev --tree-kill --respawn ./src/main.ts",
    "test": "mocha -r ts-node/register src/utils/testing/setup.ts src/**/*.spec.ts",
    "test:debug": "mocha --inspect -r ts-node/register src/utils/testing/setup.ts src/**/*.spec.ts"
  },
  "devDependencies": {
    "@graphql-codegen/typescript-resolvers": "^1.18.1",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/deepmerge": "^2.2.0",
    "@types/knex": "^0.16.1",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.16",
    "@types/pluralize": "^0.0.29",
    "@types/snake-case": "^1.1.2",
    "@types/winston": "^2.4.4",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "minimist": "^1.2.5",
    "mocha": "^8.3.0",
    "pg-mem": "^1.8.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@graphile/operation-hooks": "^1.0.0",
    "@graphile/pg-pubsub": "^4.11.0",
    "@types/chalk": "^2.2.0",
    "aws-sdk": "^2.848.0",
    "bcrypt": "^5.0.0",
    "chalk": "^4.1.0",
    "cookie": "^0.4.1",
    "dotenv": "^8.2.0",
    "git-rev-sync": "^3.0.1",
    "graphile-build": "^4.11.0",
    "graphile-build-pg": "^4.11.2",
    "graphql": "^15.5.0",
    "graphql-upload": "^11.0.0",
    "hashids": "^2.2.1",
    "iz": "^3.0.0",
    "just-safe-get": "^2.0.0",
    "kcors": "^2.2.2",
    "knex": "^0.21.15",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-cookie": "^1.0.0",
    "koa-logger-winston": "^0.0.2",
    "koa-mount": "^4.0.0",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "mailgun-js": "^0.22.0",
    "pg": "^8.5.1",
    "postgraphile": "^4.11.0",
    "postgraphile-plugin-connection-filter": "^2.0.0",
    "postgraphile-plugin-upload-field": "^1.0.0-alpha.10",
    "query-string": "^6.14.0",
