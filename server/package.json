{
  "name": "@tanuki/server",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "engines": {
    "node": "~12.15.0"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "echo \"===Running Migrations===\" && yarn migrate:latest && echo \"===Compiling Code===\" && tsc --extendedDiagnostics",
    "cli": "ts-node",
    "generate:types": "graphql-codegen --config codegen.yml",
    "migrate:make": "ts-node ./src/scripts/migrate:make.ts",
    "migrate:latest": "knex migrate:latest --knexfile ./src/knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile ./src/knexfile.ts",
    "start": "node ./build/main.js",
    "start:dev": "ts-node ./src/main.ts",
    "start:dev:watch": "ts-node-dev --tree-kill --respawn ./src/main.ts"
  },
  "devDependencies": {
    "@graphql-codegen/typescript-resolvers": "^1.18.1",
    "@types/deepmerge": "^2.2.0",
    "@types/ioredis": "^4.17.10",
    "@types/knex": "^0.16.1",
    "@types/node": "^14.14.16",
    "@types/pluralize": "^0.0.29",
    "@types/snake-case": "^1.1.2",
    "@types/winston": "^2.4.4",
    "apollo": "^2.32.0",
    "minimist": "^1.2.5",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.20.0",
    "@graphql-codegen/typescript": "^1.20.0",
    "@types/camelcase": "^5.2.0",
    "apollo-server": "^2.19.1",
    "camelcase": "^6.2.0",
    "chalk": "^4.1.0",
    "deepmerge": "^4.2.2",
    "dotenv": "^8.2.0",
    "graphql": "^15.4.0",
    "graphql-redis-subscriptions": "^2.3.1",
    "graphql-type-json": "^0.3.2",
    "ioredis": "^4.19.4",
    "knex": "^0.21.15",
    "pg": "^8.5.1",
    "pluralize": "^8.0.0",
    "snake-case": "^3.0.4",
    "ts-node": "^8.6.2",
    "winston": "^3.3.3"
  }
}
